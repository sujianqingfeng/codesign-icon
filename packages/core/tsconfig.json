{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022", "DOM"],
    "moduleDetection": "force",
    "module": "preserve",
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": false,
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true,
    "declaration": true,
    "noEmit": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  },

  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
